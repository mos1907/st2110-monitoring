# ST 2110 Monitoring Stack - Environment Variables
# Copy this file to .env and configure your settings

# gNMI Credentials
GNMI_USERNAME=prometheus
GNMI_PASSWORD=your-secure-password-here

# Alertmanager Integrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/HERE
PAGERDUTY_SERVICE_KEY=your-pagerduty-integration-key

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_FROM=alerts@example.com
SMTP_USERNAME=alerts@example.com
SMTP_PASSWORD=your-email-password

# Grafana
GF_SECURITY_ADMIN_PASSWORD=admin
GF_INSTALL_PLUGINS=yesoreyeram-boomtable-panel,grafana-piechart-panel

# Optional: HashiCorp Vault
VAULT_ADDR=https://vault.example.com:8200
VAULT_TOKEN=your-vault-token

# Optional: Redis
REDIS_PASSWORD=your-redis-password

# Network Interface (for packet capture)
CAPTURE_INTERFACE=eth0

# PTP Device
PTP_DEVICE=camera-1
PTP_INTERFACE=eth0

